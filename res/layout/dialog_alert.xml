<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical" >
    <TextView 
        android:id="@+id/message"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center"
    	android:paddingTop="50dip"
    	android:paddingBottom="50dip"
    	android:text="阿萨当前"/>
    <View android:id="@+id/line" style="@style/LineVerticalFrame" android:layout_below="@+id/message"/>
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center_vertical"
    	android:layout_below="@+id/line"
        android:orientation="horizontal">
	    <TextView 
	        android:id="@+id/btnSure"
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	        android:text="@string/frame_btn_sure"
	        android:background="@drawable/item_click"
	        android:padding="15dip"
	        android:gravity="center"
	        android:layout_weight="1"/>
	    <View style="@style/LineHorizontalFrame" android:layout_weight="0"/>
        <TextView 
            android:id="@+id/btnCancle"
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	        android:padding="15dip"
	        android:gravity="center"
	        android:text="@string/frame_btn_cancle"
	        android:background="@drawable/item_click"
	        android:layout_weight="1"/>
    </LinearLayout>

</RelativeLayout>
